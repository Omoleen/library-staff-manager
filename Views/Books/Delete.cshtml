@model StaffManagementN.Models.BookModel

@{
    ViewData["Title"] = "Delete Book";
}

<h1 class="h3 mb-2 text-gray-800">Delete Book</h1>
<p class="mb-4">Are you sure you want to delete this book?</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Confirm Deletion</h6>
    </div>
    <div class="card-body">
        <h4 class="text-danger">@Model.Title</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>
            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Author)</dd>
            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ISBN)</dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="BookId"/>
            <input type="submit" value="Delete" class="btn btn-danger"/>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div> 