@model IEnumerable<StaffManagementN.Models.ShiftDto>

@{
    ViewData["Title"] = "Shifts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Shift Management</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Shift</a>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDateTime)
            </th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.ShiftID" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ShiftID" class="btn btn-sm btn-outline-info me-1">Details</a>
                <a asp-action="Delete" asp-route-id="@item.ShiftID" class="btn btn-sm btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table> 