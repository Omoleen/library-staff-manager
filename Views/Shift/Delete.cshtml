@model StaffManagementN.Models.ShiftDto

@{
    ViewData["Title"] = "Delete Shift";
}

<h1 class="h3 mb-2 text-gray-800">Delete Shift</h1>
<p class="mb-4">Are you sure you want to delete this shift?</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Confirm Deletion</h6>
    </div>
    <div class="card-body">
        <h4 class="text-danger">Shift from @Model.StartDateTime.ToString("g") to @Model.EndDateTime.ToString("g")</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-3">Start Time</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.StartDateTime)</dd>
            <dt class="col-sm-3">End Time</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EndDateTime)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="ShiftID"/>
            <input type="submit" value="Delete" class="btn btn-danger"/>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div> 