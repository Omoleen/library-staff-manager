@model StaffManagementN.Models.MemberModel

@{
    ViewData["Title"] = "Member Details";
}

<h1 class="h3 mb-2 text-gray-800">Member Details</h1>
<p class="mb-4">Details for @Model.FirstName @Model.LastName.</p>

<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Member Information</h6>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="text-center mb-4">
                        <img src="/@Model.ImagePath" alt="Member Picture" class="img-fluid rounded" style="max-height: 300px;" />
                    </div>
                }
                <dl class="row">
                    <dt class="col-sm-4">First Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>
                    <dt class="col-sm-4">Last Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                    <dt class="col-sm-4">Phone Number</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                </dl>
                <a asp-action="Edit" asp-route-id="@Model.MemberId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Borrowing History</h6>
                <a asp-controller="BorrowedBooks" asp-action="Create" asp-route-memberId="@Model.MemberId" class="btn btn-sm btn-primary">
                    Borrow New Book
                </a>
            </div>
            <div class="card-body">
                @if (Model.BorrowedBooks != null && Model.BorrowedBooks.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Book Title</th>
                                    <th>Author</th>
                                    <th>Borrow Date</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var borrow in Model.BorrowedBooks)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Books" asp-action="Details" asp-route-id="@borrow.Book.BookId">
                                                @borrow.Book.Title
                                            </a>
                                        </td>
                                        <td>@borrow.Book.Author</td>
                                        <td>@borrow.BorrowDate.ToShortDateString()</td>
                                        <td>@borrow.DueDate.ToShortDateString()</td>
                                        <td>
                                            @if (!borrow.ReturnDate.HasValue)
                                            {
                                                if (DateTime.Now > borrow.DueDate)
                                                {
                                                    <span class="badge bg-danger">Overdue</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">Borrowed</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Returned @borrow.ReturnDate.Value.ToShortDateString()</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-controller="BorrowedBooks" asp-action="Details" asp-route-id="@borrow.BorrowId" 
                                                   class="btn btn-sm btn-info">Details</a>
                                                @if (!borrow.ReturnDate.HasValue)
                                                {
                                                    <form asp-controller="BorrowedBooks" asp-action="Return" asp-route-id="@borrow.BorrowId" 
                                                          method="post" style="display: inline;">
                                                        <button type="submit" class="btn btn-sm btn-success">Return</button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">Current Borrowings</h6>
                                        <p class="h4">
                                            @Model.BorrowedBooks.Count(b => !b.ReturnDate.HasValue)
                                            <small class="text-muted">books</small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">Overdue Books</h6>
                                        <p class="h4">
                                            @Model.BorrowedBooks.Count(b => !b.ReturnDate.HasValue && DateTime.Now > b.DueDate)
                                            <small class="text-muted">books</small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <p class="mb-3">No borrowing history available.</p>
                        <a asp-controller="BorrowedBooks" asp-action="Create" asp-route-memberId="@Model.MemberId" 
                           class="btn btn-primary">
                            Borrow First Book
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 