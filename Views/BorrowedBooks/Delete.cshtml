@model StaffManagementN.Models.BorrowedBookModel

@{
    ViewData["Title"] = "Delete Borrowed Book Record";
}

<h1 class="h3 mb-2 text-gray-800">Delete Borrowed Book Record</h1>
<p class="mb-4">Are you sure you want to delete this borrowed book record?</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Confirm Deletion</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Book Title</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Book.Title)</dd>

            <dt class="col-sm-3">Member Name</dt>
            <dd class="col-sm-9">@($"{Model.Member.FirstName} {Model.Member.LastName}")</dd>

            <dt class="col-sm-3">Borrow Date</dt>
            <dd class="col-sm-9">@Model.BorrowDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Due Date</dt>
            <dd class="col-sm-9">@Model.DueDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Return Date</dt>
            <dd class="col-sm-9">
                @if (Model.ReturnDate.HasValue)
                {
                    @Model.ReturnDate.Value.ToShortDateString()
                }
                else
                {
                    <span class="text-warning">Not Returned</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="BorrowId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div> 